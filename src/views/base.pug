doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    link(rel="stylesheet", href="/static/css/style.css")
    title #{pageTitle} | metube
  body
    main
      header 
        nav
          ul
            li 
              a(href="/") Home
            li
              a(href="/search") search
            if loggedIn
              li
                a(href="/user/"+loggedInUser._id) my profile
              li
                a(href="/user/logout") log out
              li 
                a(href="/video/upload") upload
              li 
                a(href="/user/edit") edit profile
            else
              li
                a(href="/join") join
              li
                a(href="/login") login
      block contents
      include partials/footer.pug
    script(src="/static/js/main.js") 
