doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    title #{pageTitle} | metube
  body
    main
      header 
        h1=pageTitle
        nav
          ul
            li 
              a(href="/") Home
            li
              a(href="/search") search
            if loggedIn
              li
                a(href="/user/edit") #{user.username}'s edit profile
              li
                a(href="/user/logout") log out
              li 
                a(href="/video/upload") upload
            else
              li
                a(href="/join") join
              li
                a(href="/login") login
      block contents
      include partials/footer.pug
