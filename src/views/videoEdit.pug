extends base.pug

block contents 
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", value=video.title)
        input(placeholder="Description", required, type="text", name="description", value=video.description)
        input(placeholder="hashtags", required, type="text", name="hashtags", value=video.hashtags.join())
        input(type="Submit", value="Upload")
